{
  "openapi": "3.0.3",
  "info": {
    "title": "Tronbyt Server API",
    "description": "API for managing Tronbyt devices, apps, and installations. This server allows you to control Tidbyt and Tronbyt devices, manage app installations, and push content to displays.",
    "version": "1.0.0",
    "contact": {
      "name": "Tronbyt Server",
      "url": "https://github.com/tronbyt/tronbyt-server"
    },
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "servers": [
    {
      "url": "http://localhost:8000",
      "description": "Local development server"
    },
    {
      "url": "https://your-tronbyt-server.com",
      "description": "Production server"
    }
  ],
  "security": [
    {
      "BearerAuth": []
    },
    {
      "ApiKeyAuth": []
    }
  ],
  "paths": {
    "/v0/devices": {
      "get": {
        "summary": "List all devices",
        "description": "Retrieve a list of all devices associated with the authenticated user",
        "operationId": "listDevices",
        "tags": ["Devices"],
        "responses": {
          "200": {
            "description": "List of devices",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "devices": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/DeviceMetadata"
                      }
                    }
                  }
                },
                "examples": {
                  "success": {
                    "summary": "Successful device list",
                    "value": {
                      "devices": [
                        {
                          "id": "a1b2c3d4",
                          "displayName": "Living Room Display",
                          "brightness": 80,
                          "autoDim": true
                        },
                        {
                          "id": "e5f6g7h8",
                          "displayName": "Kitchen Display",
                          "brightness": 100,
                          "autoDim": false
                        }
                      ]
                    }
                  }
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/BadRequest"
          },
          "401": {
            "$ref": "#/components/responses/Unauthorized"
          }
        }
      }
    },
    "/v0/devices/{device_id}": {
      "get": {
        "summary": "Get device details",
        "description": "Retrieve detailed information about a specific device",
        "operationId": "getDevice",
        "tags": ["Devices"],
        "parameters": [
          {
            "name": "device_id",
            "in": "path",
            "required": true,
            "description": "8-character hexadecimal device ID",
            "schema": {
              "type": "string",
              "pattern": "^[a-fA-F0-9]{8}$",
              "example": "a1b2c3d4"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Device details",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/DeviceMetadata"
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/BadRequest"
          },
          "401": {
            "$ref": "#/components/responses/Unauthorized"
          },
          "404": {
            "$ref": "#/components/responses/NotFound"
          }
        }
      },
      "patch": {
        "summary": "Update device settings",
        "description": "Update device brightness and auto-dim settings",
        "operationId": "updateDevice",
        "tags": ["Devices"],
        "parameters": [
          {
            "name": "device_id",
            "in": "path",
            "required": true,
            "description": "8-character hexadecimal device ID",
            "schema": {
              "type": "string",
              "pattern": "^[a-fA-F0-9]{8}$",
              "example": "a1b2c3d4"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "brightness": {
                    "type": "integer",
                    "minimum": 0,
                    "maximum": 255,
                    "description": "Brightness level (0-255)",
                    "example": 128
                  },
                  "autoDim": {
                    "type": "boolean",
                    "description": "Enable automatic dimming",
                    "example": true
                  }
                }
              },
              "example": {
                "brightness": 128,
                "autoDim": true
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Device updated successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/DeviceMetadata"
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/BadRequest"
          },
          "401": {
            "$ref": "#/components/responses/Unauthorized"
          },
          "404": {
            "$ref": "#/components/responses/NotFound"
          }
        }
      }
    },
    "/v0/devices/{device_id}/push": {
      "post": {
        "summary": "Push image to device",
        "description": "Push a base64-encoded WebP image to a device",
        "operationId": "pushImage",
        "tags": ["Devices"],
        "parameters": [
          {
            "name": "device_id",
            "in": "path",
            "required": true,
            "description": "8-character hexadecimal device ID",
            "schema": {
              "type": "string",
              "pattern": "^[a-fA-F0-9]{8}$",
              "example": "a1b2c3d4"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["image"],
                "properties": {
                  "image": {
                    "type": "string",
                    "format": "base64",
                    "description": "Base64-encoded WebP image data",
                    "example": "UklGRnoGAABXRUJQVlA4WAoAAAAQAAAADwAABwAAQUxQSDIAAAARL0AmbZtu..."
                  },
                  "installationID": {
                    "type": "string",
                    "description": "Optional installation ID for the image",
                    "example": "clock-123"
                  },
                  "installationId": {
                    "type": "string",
                    "description": "Alternative installation ID field (for compatibility)",
                    "example": "clock-123"
                  }
                }
              },
              "example": {
                "image": "UklGRnoGAABXRUJQVlA4WAoAAAAQAAAADwAABwAAQUxQSDIAAAARL0AmbZtu...",
                "installationID": "clock-123"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Image pushed successfully",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string",
                  "example": "WebP received."
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/BadRequest"
          },
          "401": {
            "$ref": "#/components/responses/Unauthorized"
          },
          "404": {
            "$ref": "#/components/responses/NotFound"
          },
          "500": {
            "$ref": "#/components/responses/InternalServerError"
          }
        }
      }
    },
    "/v0/devices/{device_id}/installations": {
      "get": {
        "summary": "List device installations",
        "description": "Get all app installations on a specific device",
        "operationId": "listInstallations",
        "tags": ["Installations"],
        "parameters": [
          {
            "name": "device_id",
            "in": "path",
            "required": true,
            "description": "8-character hexadecimal device ID",
            "schema": {
              "type": "string",
              "pattern": "^[a-fA-F0-9]{8}$",
              "example": "a1b2c3d4"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "List of installations",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "installations": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/Installation"
                      }
                    }
                  }
                },
                "examples": {
                  "success": {
                    "summary": "Successful installations list",
                    "value": {
                      "installations": [
                        {
                          "id": "clock-123",
                          "appID": "Clock"
                        },
                        {
                          "id": "weather-456",
                          "appID": "Weather"
                        }
                      ]
                    }
                  }
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/BadRequest"
          },
          "401": {
            "$ref": "#/components/responses/Unauthorized"
          },
          "404": {
            "$ref": "#/components/responses/NotFound"
          }
        }
      }
    },
    "/v0/devices/{device_id}/installations/{installation_id}": {
      "patch": {
        "summary": "Update installation settings",
        "description": "Enable/disable or pin/unpin an app installation",
        "operationId": "updateInstallation",
        "tags": ["Installations"],
        "parameters": [
          {
            "name": "device_id",
            "in": "path",
            "required": true,
            "description": "8-character hexadecimal device ID",
            "schema": {
              "type": "string",
              "pattern": "^[a-fA-F0-9]{8}$",
              "example": "a1b2c3d4"
            }
          },
          {
            "name": "installation_id",
            "in": "path",
            "required": true,
            "description": "Installation ID",
            "schema": {
              "type": "string",
              "example": "clock-123"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "oneOf": [
                  {
                    "type": "object",
                    "properties": {
                      "set_enabled": {
                        "type": "boolean",
                        "description": "Enable or disable the app",
                        "example": true
                      }
                    },
                    "required": ["set_enabled"]
                  },
                  {
                    "type": "object",
                    "properties": {
                      "set_pinned": {
                        "type": "boolean",
                        "description": "Pin or unpin the app",
                        "example": true
                      }
                    },
                    "required": ["set_pinned"]
                  }
                ]
              },
              "examples": {
                "enable_app": {
                  "summary": "Enable an app",
                  "value": {
                    "set_enabled": true
                  }
                },
                "disable_app": {
                  "summary": "Disable an app",
                  "value": {
                    "set_enabled": false
                  }
                },
                "pin_app": {
                  "summary": "Pin an app",
                  "value": {
                    "set_pinned": true
                  }
                },
                "unpin_app": {
                  "summary": "Unpin an app",
                  "value": {
                    "set_pinned": false
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Operation completed successfully",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string",
                  "enum": [
                    "App Enabled.",
                    "App disabled.",
                    "App pinned.",
                    "App unpinned.",
                    "App is not pinned."
                  ]
                }
              }
            }
          },
          "400": {
            "description": "Bad request",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string"
                },
                "examples": {
                  "invalid_boolean": {
                    "summary": "Invalid boolean value",
                    "value": "Invalid value for set_enabled. Must be a boolean."
                  }
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/Unauthorized"
          },
          "404": {
            "$ref": "#/components/responses/NotFound"
          },
          "500": {
            "description": "Internal server error",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string",
                  "example": "Couldn't complete the operation"
                }
              }
            }
          }
        }
      },
      "put": {
        "summary": "Update installation settings (alternative)",
        "description": "Alternative method for updating installation settings",
        "operationId": "updateInstallationPut",
        "tags": ["Installations"],
        "parameters": [
          {
            "name": "device_id",
            "in": "path",
            "required": true,
            "description": "8-character hexadecimal device ID",
            "schema": {
              "type": "string",
              "pattern": "^[a-fA-F0-9]{8}$",
              "example": "a1b2c3d4"
            }
          },
          {
            "name": "installation_id",
            "in": "path",
            "required": true,
            "description": "Installation ID",
            "schema": {
              "type": "string",
              "example": "clock-123"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "oneOf": [
                  {
                    "type": "object",
                    "properties": {
                      "set_enabled": {
                        "type": "boolean",
                        "description": "Enable or disable the app",
                        "example": true
                      }
                    },
                    "required": ["set_enabled"]
                  },
                  {
                    "type": "object",
                    "properties": {
                      "set_pinned": {
                        "type": "boolean",
                        "description": "Pin or unpin the app",
                        "example": true
                      }
                    },
                    "required": ["set_pinned"]
                  }
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Operation completed successfully",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string"
                }
              }
            }
          },
          "400": {
            "description": "Bad request",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string"
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/Unauthorized"
          },
          "404": {
            "$ref": "#/components/responses/NotFound"
          },
          "500": {
            "description": "Internal server error",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string"
                }
              }
            }
          }
        }
      },
      "delete": {
        "summary": "Delete installation",
        "description": "Delete a pushed app installation from a device",
        "operationId": "deleteInstallation",
        "tags": ["Installations"],
        "parameters": [
          {
            "name": "device_id",
            "in": "path",
            "required": true,
            "description": "8-character hexadecimal device ID",
            "schema": {
              "type": "string",
              "pattern": "^[a-fA-F0-9]{8}$",
              "example": "a1b2c3d4"
            }
          },
          {
            "name": "installation_id",
            "in": "path",
            "required": true,
            "description": "Installation ID",
            "schema": {
              "type": "string",
              "example": "clock-123"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Installation deleted successfully",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string",
                  "example": "Webp deleted."
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/BadRequest"
          },
          "401": {
            "$ref": "#/components/responses/Unauthorized"
          },
          "404": {
            "$ref": "#/components/responses/NotFound"
          }
        }
      }
    },
    "/v0/devices/{device_id}/push_app": {
      "post": {
        "summary": "Push app to device",
        "description": "Render and push an app to a device with configuration",
        "operationId": "pushApp",
        "tags": ["Apps"],
        "parameters": [
          {
            "name": "device_id",
            "in": "path",
            "required": true,
            "description": "8-character hexadecimal device ID",
            "schema": {
              "type": "string",
              "pattern": "^[a-fA-F0-9]{8}$",
              "example": "a1b2c3d4"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["app_id", "config"],
                "properties": {
                  "app_id": {
                    "type": "string",
                    "description": "App identifier",
                    "example": "clock"
                  },
                  "config": {
                    "type": "object",
                    "description": "App configuration parameters",
                    "additionalProperties": true,
                    "example": {
                      "timezone": "America/New_York",
                      "format": "12h"
                    }
                  },
                  "installationID": {
                    "type": "string",
                    "description": "Optional installation ID",
                    "example": "clock-123"
                  },
                  "installationId": {
                    "type": "string",
                    "description": "Alternative installation ID field",
                    "example": "clock-123"
                  }
                }
              },
              "example": {
                "app_id": "clock",
                "config": {
                  "timezone": "America/New_York",
                  "format": "12h"
                },
                "installationID": "clock-123"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "App pushed successfully",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string",
                  "example": "App pushed."
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/BadRequest"
          },
          "401": {
            "$ref": "#/components/responses/Unauthorized"
          },
          "404": {
            "$ref": "#/components/responses/NotFound"
          },
          "500": {
            "$ref": "#/components/responses/InternalServerError"
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "BearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT",
        "description": "Bearer token authentication. Use your API key as the bearer token.\nExample: `Authorization: Bearer your-api-key-here`"
      },
      "ApiKeyAuth": {
        "type": "apiKey",
        "in": "header",
        "name": "Authorization",
        "description": "API key authentication. Use your API key directly in the Authorization header.\nExample: `Authorization: your-api-key-here`"
      }
    },
    "schemas": {
      "DeviceMetadata": {
        "type": "object",
        "required": ["id", "displayName", "brightness", "autoDim"],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^[a-fA-F0-9]{8}$",
            "description": "8-character hexadecimal device ID",
            "example": "a1b2c3d4"
          },
          "displayName": {
            "type": "string",
            "description": "Human-readable device name",
            "example": "Living Room Display"
          },
          "brightness": {
            "type": "integer",
            "minimum": 0,
            "maximum": 255,
            "description": "Device brightness level (0-255)",
            "example": 128
          },
          "autoDim": {
            "type": "boolean",
            "description": "Whether automatic dimming is enabled",
            "example": true
          }
        }
      },
      "Installation": {
        "type": "object",
        "required": ["id", "appID"],
        "properties": {
          "id": {
            "type": "string",
            "description": "Installation ID",
            "example": "clock-123"
          },
          "appID": {
            "type": "string",
            "description": "App name/identifier",
            "example": "Clock"
          }
        }
      },
      "Device": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^[a-fA-F0-9]{8}$",
            "description": "8-character hexadecimal device ID"
          },
          "name": {
            "type": "string",
            "description": "Device name"
          },
          "type": {
            "type": "string",
            "enum": ["tidbyt_gen1", "tidbyt_gen2", "pixoticker", "raspberrypi", "tronbyt_s3", "tronbyt_s3_wide", "other"],
            "description": "Device type"
          },
          "api_key": {
            "type": "string",
            "description": "Device API key"
          },
          "img_url": {
            "type": "string",
            "format": "uri",
            "description": "Device image URL"
          },
          "ws_url": {
            "type": "string",
            "format": "uri",
            "description": "WebSocket URL"
          },
          "notes": {
            "type": "string",
            "description": "Device notes"
          },
          "brightness": {
            "type": "integer",
            "minimum": 0,
            "maximum": 100,
            "description": "Brightness percentage (0-100)"
          },
          "night_mode_enabled": {
            "type": "boolean",
            "description": "Night mode enabled"
          },
          "night_mode_app": {
            "type": "string",
            "description": "Night mode app"
          },
          "night_start": {
            "oneOf": [
              {
                "type": "integer"
              },
              {
                "type": "string"
              }
            ],
            "description": "Night mode start time"
          },
          "night_end": {
            "oneOf": [
              {
                "type": "integer"
              },
              {
                "type": "string"
              }
            ],
            "description": "Night mode end time"
          },
          "night_brightness": {
            "type": "integer",
            "minimum": 0,
            "maximum": 100,
            "description": "Night mode brightness percentage"
          },
          "dim_time": {
            "type": "string",
            "description": "Dim time in HH:MM format"
          },
          "dim_brightness": {
            "type": "integer",
            "minimum": 0,
            "maximum": 100,
            "description": "Dim brightness percentage"
          },
          "default_interval": {
            "type": "integer",
            "description": "Default update interval"
          },
          "timezone": {
            "type": "string",
            "description": "Device timezone"
          },
          "location": {
            "$ref": "#/components/schemas/Location"
          },
          "apps": {
            "type": "object",
            "additionalProperties": {
              "$ref": "#/components/schemas/App"
            },
            "description": "Device apps"
          },
          "last_app_index": {
            "type": "integer",
            "description": "Last app index"
          },
          "pinned_app": {
            "type": "string",
            "description": "Pinned app installation ID"
          },
          "interstitial_enabled": {
            "type": "boolean",
            "description": "Interstitial app enabled"
          },
          "interstitial_app": {
            "type": "string",
            "description": "Interstitial app installation ID"
          }
        }
      },
      "Location": {
        "type": "object",
        "properties": {
          "locality": {
            "type": "string",
            "description": "Locality name"
          },
          "description": {
            "type": "string",
            "description": "Location description"
          },
          "place_id": {
            "type": "string",
            "description": "Place ID"
          },
          "timezone": {
            "type": "string",
            "description": "Location timezone"
          },
          "lat": {
            "type": "number",
            "format": "float",
            "description": "Latitude"
          },
          "lng": {
            "type": "number",
            "format": "float",
            "description": "Longitude"
          }
        }
      },
      "App": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "App ID"
          },
          "iname": {
            "type": "string",
            "description": "Installation name"
          },
          "name": {
            "type": "string",
            "description": "App name"
          },
          "uinterval": {
            "type": "integer",
            "description": "Update interval"
          },
          "display_time": {
            "type": "integer",
            "description": "Display time"
          },
          "notes": {
            "type": "string",
            "description": "App notes"
          },
          "enabled": {
            "type": "boolean",
            "description": "App enabled"
          },
          "pushed": {
            "type": "boolean",
            "description": "App pushed"
          },
          "order": {
            "type": "integer",
